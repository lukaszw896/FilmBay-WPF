<UserControl x:Class="DotNetProjectOne.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="70" >
                
    <Grid MaxHeight="30" MaxWidth="70">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button BorderThickness="0" Grid.Column="0" Background="Transparent" Click="minimizeButton_click" HorizontalAlignment="Right" >
            <Image  Source="/Icons/minimize_button.png" />
        </Button>
        <Button BorderThickness="0" Grid.Column="1" Background="Transparent" Click="closeButton_Click">
            <Image Grid.Column="1" Source="/Icons/close_button.png"/>
        </Button>

    </Grid>
</UserControl>
