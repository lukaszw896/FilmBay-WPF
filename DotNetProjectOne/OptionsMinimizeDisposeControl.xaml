<UserControl x:Class="DotNetProjectOne.OptionsMinimizeDisposeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:DotNetProjectOne"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="105">
    <Grid MaxHeight="30" MaxWidth="105">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button BorderThickness="0" Grid.Column="0" Background="Transparent" Click="optionsButton_click">
            <Image Grid.Column="1" Source="/Icons/option_button.png"/>
        </Button>
        <controls:MinimizeDisposeControl Grid.Column="1"></controls:MinimizeDisposeControl>
        <Popup  Name="OptionPopUp"  Width="105" Height="30" Placement="Bottom"  IsEnabled="True" IsOpen="False" >
            <Button Background="#333" MaxWidth="105" Foreground="White"   Click="LogOutButton_Click"> Logout</Button>  
        </Popup>
    </Grid>
</UserControl>
